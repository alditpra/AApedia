---
// Cloud Partners Section using uploaded official logos
const partners = [
  {
    name: "AWS",
    logo: "/amazon-web-services.svg",
  },
  {
    name: "Google Cloud",
    logo: "/Google_Cloud_logo.svg",
  },
  {
    name: "DigitalOcean",
    logo: "/Digital_Ocean_logo.svg",
  },
  {
    name: "Vultr",
    logo: "/vultr_logo-white.svg",
  },
];
---

<section class="py-16 bg-white border-y border-slate-100">
  <div class="max-w-5xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-10">
      <p
        class="text-sm font-semibold text-primary-600 uppercase tracking-wider mb-2"
      >
        Infrastruktur Enterprise Grade
      </p>
      <h2 class="text-2xl md:text-3xl font-bold text-slate-800">
        Powered by Cloud Leaders
      </h2>
    </div>

    <!-- Logo Row - Minimal Style -->
    <div class="flex flex-wrap items-center justify-center gap-10 lg:gap-16">
      {
        partners.map((partner) => (
          <div class="flex items-center justify-center group cursor-default">
            <img
              src={partner.logo}
              alt={partner.name}
              class="h-8 lg:h-10 w-auto object-contain opacity-60 group-hover:opacity-100 transition-opacity duration-300"
            />
          </div>
        ))
      }
    </div>

    <!-- Tagline -->
    <p class="text-center text-sm text-slate-500 mt-8">
      <strong class="text-slate-600">Provider Ternama</strong> â€” Bukan server kaleng-kaleng.
    </p>
  </div>
</section>
