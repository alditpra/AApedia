    </div>

    <!-- One-Time Services Note -->
    <div class="mt-12 text-center">
      <div class="inline-flex items-center gap-4 px-6 py-4 rounded-2xl bg-white border border-slate-200 shadow-sm">
        <div class="w-10 h-10 rounded-xl bg-accent-100 flex items-center justify-center">
          <svg class="w-5 h-5 text-accent-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
