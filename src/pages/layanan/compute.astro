---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";

const packages = [
  {
    name: "Scraper Node",
    target: "Web Scraping, Crawling, Automasi Data",
    specs: "4 vCPU, 8 GB RAM, 100 GB SSD",
    features: [
      "Python/Node.js Ready",
      "Proxy Setup",
      "Cron Scheduler",
      "Support Email",
    ],
    price: "Rp 800.000",
    period: "/bulan",
    popular: false,
  },
  {
    name: "Big Data Station",
    target: "Statistik Besar, R/Python/Julia",
    specs: "8 vCPU, 32 GB RAM, 200 GB SSD",
    features: [
      "R/Python/Julia Install",
      "Database Tuning",
      "Backup Harian",
      "Support WhatsApp",
    ],
    price: "Rp 2.000.000",
    period: "/bulan",
    popular: true,
  },
  {
    name: "Memory Monster",
    target: "Dataset Raksasa, In-Memory Processing",
    specs: "16 vCPU, 64 GB RAM, 500 GB SSD",
    features: [
      "High Memory Optimized",
      "SSD NVMe",
      "Priority Support",
      "Custom Config",
    ],
    price: "Rp 4.500.000",
    period: "/bulan",
    popular: false,
  },
];

const steps = [
  {
    number: "01",
    title: "Konsultasi",
    description:
      "Ceritakan kebutuhan riset Anda. Kami bantu desain infrastruktur.",
  },
  {
    number: "02",
    title: "Setup Environment",
    description:
      "Install tools, library, database sesuai kebutuhan penelitian Anda.",
  },
  {
    number: "03",
    title: "Mulai Riset!",
    description: "Server siap pakai. Kami monitoring 24/7 selama Anda bekerja.",
  },
];

const faqs = [
  {
    q: "Software apa saja yang bisa di-install?",
    a: "Python, R, Julia, Jupyter Notebook, RStudio Server, dan lainnya. Jika ada kebutuhan khusus, tim kami siap bantu install.",
  },
  {
    q: "Apakah bisa akses root/sudo?",
    a: "Bisa! Anda mendapat akses penuh ke server. Kami tetap monitoring dari sisi infrastruktur.",
  },
  {
    q: "Bagaimana jika butuh lebih banyak RAM?",
    a: "Bisa upgrade kapan saja. Proses upgrade cepat dan tidak perlu setup ulang dari awal.",
  },
  {
    q: "Apakah data saya aman?",
    a: "Data dienkripsi dan backup harian. Server berlokasi di Singapore/Jakarta dengan keamanan enterprise-grade.",
  },
];

const useCases = [
  {
    title: "Web Scraping Riset",
    description: "Crawling data dari website untuk penelitian",
    techDetails: [
      "Scrapy/Selenium setup",
      "Proxy rotation",
      "Database PostgreSQL",
      "Cron scheduler",
    ],
  },
  {
    title: "Analisis Statistik",
    description: "Olah data besar dengan R/Python",
    techDetails: [
      "R + tidyverse",
      "RStudio Server",
      "Jupyter Notebook",
      "RAM optimized",
    ],
  },
  {
    title: "Data Pipeline",
    description: "ETL dan transformasi data otomatis",
    techDetails: [
      "Python pandas",
      "Apache Airflow",
      "MySQL/PostgreSQL",
      "Scheduled jobs",
    ],
  },
  {
    title: "Simulasi Numerik",
    description: "Komputasi berat untuk model matematika",
    techDetails: [
      "GNU Octave",
      "High CPU instances",
      "Parallel processing",
      "Result export",
    ],
  },
];
---

<BaseLayout title="AAPEDIA COMPUTE - Data Processing & Scraping">
  <Header />

  <main class="pt-24">
    <!-- Hero -->
    <section class="py-16 bg-gradient-to-b from-blue-50 to-white">
      <div class="max-w-7xl mx-auto px-6">
        <h1 class="text-4xl md:text-5xl font-bold text-slate-800 mb-4">
          AAPEDIA <span class="text-gradient">COMPUTE</span>
        </h1>
        <p class="text-xl text-slate-600 mb-2">
          Server Tangguh untuk Olah Data & Riset Berat
        </p>
        <p class="text-slate-500 max-w-2xl">
          Infrastruktur: Powered by <strong
            >AWS EC2 / Google Compute Engine</strong
          > — untuk workload berat yang butuh performa tinggi.
        </p>
      </div>
    </section>

    <!-- How It Works -->
    <section class="py-16 bg-slate-50">
      <div class="max-w-7xl mx-auto px-6">
        <h2
          class="text-2xl md:text-3xl font-bold text-slate-800 text-center mb-12"
        >
          Cara Kerja
        </h2>
        <div class="grid md:grid-cols-3 gap-8">
          {
            steps.map((step, index) => (
              <div class="relative text-center">
                <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-br from-primary-500 to-accent-500 flex items-center justify-center text-white font-bold text-xl">
                  {step.number}
                </div>
                <h3 class="text-lg font-bold text-slate-800 mb-2">
                  {step.title}
                </h3>
                <p class="text-slate-500 text-sm">{step.description}</p>
                {index < steps.length - 1 && (
                  <div class="hidden md:block absolute top-8 left-[60%] w-[80%] border-t-2 border-dashed border-slate-200" />
                )}
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Pricing Cards -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-6">
        <h2
          class="text-2xl md:text-3xl font-bold text-slate-800 text-center mb-4"
        >
          Pilih Paket Anda
        </h2>
        <p class="text-slate-500 text-center mb-12 max-w-xl mx-auto">
          Semua paket sudah termasuk setup environment, backup, dan monitoring.
        </p>

        <div class="grid md:grid-cols-3 gap-8">
          {
            packages.map((pkg) => (
              <div
                class={`relative rounded-2xl p-8 ${pkg.popular ? "bg-primary-600 text-white ring-4 ring-primary-200" : "bg-white border border-slate-200"} hover-lift`}
              >
                {pkg.popular && (
                  <div class="absolute -top-4 left-1/2 -translate-x-1/2 px-4 py-1 bg-accent-500 text-white text-sm font-semibold rounded-full">
                    Popular
                  </div>
                )}

                <h3
                  class={`text-xl font-bold mb-2 ${pkg.popular ? "text-white" : "text-slate-800"}`}
                >
                  {pkg.name}
                </h3>
                <p
                  class={`text-sm mb-4 ${pkg.popular ? "text-primary-100" : "text-slate-500"}`}
                >
                  {pkg.target}
                </p>

                <div
                  class={`text-sm mb-4 px-3 py-2 rounded-lg ${pkg.popular ? "bg-white/10" : "bg-slate-50"}`}
                >
                  <span
                    class={pkg.popular ? "text-primary-100" : "text-slate-600"}
                  >
                    {pkg.specs}
                  </span>
                </div>

                <div class="mb-6">
                  <span
                    class={`text-3xl font-bold ${pkg.popular ? "text-white" : "text-slate-800"}`}
                  >
                    {pkg.price}
                  </span>
                  <span
                    class={`text-sm ${pkg.popular ? "text-primary-200" : "text-slate-500"}`}
                  >
                    {pkg.period}
                  </span>
                </div>

                <ul class="space-y-3 mb-8">
                  {pkg.features.map((feature) => (
                    <li
                      class={`flex items-center gap-2 text-sm ${pkg.popular ? "text-primary-100" : "text-slate-600"}`}
                    >
                      <svg
                        class={`w-5 h-5 flex-shrink-0 ${pkg.popular ? "text-accent-300" : "text-accent-500"}`}
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                          clip-rule="evenodd"
                        />
                      </svg>
                      {feature}
                    </li>
                  ))}
                </ul>

                <a
                  href="/kontak"
                  class={`block text-center py-3 rounded-full font-semibold transition-all ${pkg.popular ? "bg-white text-primary-700 hover:bg-primary-50" : "bg-primary-600 text-white hover:bg-primary-700"}`}
                >
                  Pilih Paket
                </a>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Comparison Table -->
    <section class="py-16 bg-slate-50">
      <div class="max-w-5xl mx-auto px-6">
        <h2
          class="text-2xl md:text-3xl font-bold text-slate-800 text-center mb-12"
        >
          Perbandingan Fitur
        </h2>
        <div class="overflow-x-auto">
          <table class="w-full bg-white rounded-2xl overflow-hidden shadow-sm">
            <thead>
              <tr class="bg-slate-100">
                <th class="text-left p-4 font-semibold text-slate-700">Fitur</th
                >
                <th class="text-center p-4 font-semibold text-slate-700"
                  >Scraper Node</th
                >
                <th
                  class="text-center p-4 font-semibold text-primary-600 bg-primary-50"
                  >Big Data Station</th
                >
                <th class="text-center p-4 font-semibold text-slate-700"
                  >Memory Monster</th
                >
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-100">
              <tr>
                <td class="p-4 text-slate-600">vCPU</td>
                <td class="p-4 text-center text-slate-800">4</td>
                <td
                  class="p-4 text-center text-primary-600 bg-primary-50/50 font-semibold"
                  >8</td
                >
                <td class="p-4 text-center text-slate-800">16</td>
              </tr>
              <tr>
                <td class="p-4 text-slate-600">RAM</td>
                <td class="p-4 text-center text-slate-800">8 GB</td>
                <td
                  class="p-4 text-center text-primary-600 bg-primary-50/50 font-semibold"
                  >32 GB</td
                >
                <td class="p-4 text-center text-slate-800">64 GB</td>
              </tr>
              <tr>
                <td class="p-4 text-slate-600">Storage SSD</td>
                <td class="p-4 text-center text-slate-800">100 GB</td>
                <td
                  class="p-4 text-center text-primary-600 bg-primary-50/50 font-semibold"
                  >200 GB</td
                >
                <td class="p-4 text-center text-slate-800">500 GB</td>
              </tr>
              <tr>
                <td class="p-4 text-slate-600">Root Access</td>
                <td class="p-4 text-center text-accent-500">✓</td>
                <td class="p-4 text-center text-accent-500 bg-primary-50/50"
                  >✓</td
                >
                <td class="p-4 text-center text-accent-500">✓</td>
              </tr>
              <tr>
                <td class="p-4 text-slate-600">Backup Harian</td>
                <td class="p-4 text-center text-slate-400">—</td>
                <td class="p-4 text-center text-accent-500 bg-primary-50/50"
                  >✓</td
                >
                <td class="p-4 text-center text-accent-500">✓</td>
              </tr>
              <tr>
                <td class="p-4 text-slate-600">Support</td>
                <td class="p-4 text-center text-slate-800">Email</td>
                <td
                  class="p-4 text-center text-primary-600 bg-primary-50/50 font-semibold"
                  >WhatsApp</td
                >
                <td class="p-4 text-center text-slate-800">Priority</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </section>

    <!-- Use Cases -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-6">
        <h2
          class="text-2xl md:text-3xl font-bold text-slate-800 text-center mb-4"
        >
          Cocok Untuk
        </h2>
        <p class="text-slate-500 text-center mb-12 max-w-xl mx-auto">
          Contoh implementasi yang sudah kami tangani (technical details kami
          yang manage).
        </p>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {
            useCases.map((useCase) => (
              <div class="bg-white rounded-2xl p-6 border border-slate-100 hover-lift">
                <h3 class="font-bold text-slate-800 mb-2">{useCase.title}</h3>
                <p class="text-sm text-slate-500 mb-4">{useCase.description}</p>
                <div class="space-y-2">
                  {useCase.techDetails.map((detail) => (
                    <div class="flex items-center gap-2 text-xs text-slate-400">
                      <svg
                        class="w-3 h-3 text-accent-500 flex-shrink-0"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                          clip-rule="evenodd"
                        />
                      </svg>
                      <span class="font-mono">{detail}</span>
                    </div>
                  ))}
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- FAQ -->
    <section class="py-16">
      <div class="max-w-3xl mx-auto px-6">
        <h2
          class="text-2xl md:text-3xl font-bold text-slate-800 text-center mb-12"
        >
          Pertanyaan Umum
        </h2>
        <div class="space-y-4">
          {
            faqs.map((faq) => (
              <details class="group bg-white rounded-2xl border border-slate-200 overflow-hidden">
                <summary class="flex items-center justify-between p-6 cursor-pointer hover:bg-slate-50">
                  <span class="font-semibold text-slate-800">{faq.q}</span>
                  <svg
                    class="w-5 h-5 text-slate-400 group-open:rotate-180 transition-transform"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M19 9l-7 7-7-7"
                    />
                  </svg>
                </summary>
                <div class="px-6 pb-6 text-slate-500">{faq.a}</div>
              </details>
            ))
          }
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-16 bg-gradient-to-br from-primary-600 to-primary-800">
      <div class="max-w-4xl mx-auto px-6 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">
          Butuh Spesifikasi Khusus?
        </h2>
        <p class="text-primary-100 mb-8">
          Kami bisa custom sesuai kebutuhan riset Anda. Konsultasi gratis!
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="/kontak"
            class="inline-flex items-center gap-2 px-8 py-4 bg-white text-primary-700 rounded-full font-semibold hover:bg-primary-50 transition-all"
          >
            Konsultasi Gratis
          </a>
          <a
            href="https://wa.me/6281234567890"
            target="_blank"
            rel="noopener"
            class="inline-flex items-center gap-2 px-8 py-4 bg-transparent text-white border-2 border-white/30 rounded-full font-semibold hover:bg-white/10 transition-all"
          >
            WhatsApp Langsung
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
