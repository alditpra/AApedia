---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";

const features = [
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z" /></svg>`,
    title: "Invoice Resmi",
    description:
      "Invoice lengkap dalam Rupiah dengan detail penggunaan untuk keperluan SPJ dan audit.",
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 002.25-2.25V6.75A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25v10.5A2.25 2.25 0 004.5 19.5z" /></svg>`,
    title: "Tanpa Kartu Kredit",
    description:
      "Bayar via transfer bank biasa. Tidak perlu kartu kredit atau akun payment gateway.",
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
    title: "Harga Rupiah Fix",
    description:
      "Harga dalam Rupiah dengan rate tetap. Tidak kena fluktuasi kurs Dollar.",
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 14.25l6-6m4.5-3.493V21.75l-3.75-1.5-3.75 1.5-3.75-1.5-3.75 1.5V4.757c0-1.108.806-2.057 1.907-2.185a48.507 48.507 0 0111.186 0c1.1.128 1.907 1.077 1.907 2.185zM9.75 9h.008v.008H9.75V9zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm4.125 4.5h.008v.008h-.008V13.5zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" /></svg>`,
    title: "Potongan Semester",
    description: "Diskon khusus untuk pembayaran per semester atau tahunan.",
  },
];

const steps = [
  {
    number: "01",
    title: "Konsultasi",
    description: "Ceritakan kebutuhan Anda. Kami bantu estimasi biaya bulanan.",
  },
  {
    number: "02",
    title: "Penawaran",
    description:
      "Anda terima penawaran resmi dengan rincian harga dalam Rupiah.",
  },
  {
    number: "03",
    title: "Invoice & Bayar",
    description:
      "Transfer bank, terima invoice resmi untuk keperluan SPJ/audit.",
  },
];

const faqs = [
  {
    q: "Bagaimana cara pembayarannya?",
    a: "Transfer bank ke rekening PT Awan Akses Pedia. Kami kirim invoice resmi setelah pembayaran dikonfirmasi.",
  },
  {
    q: "Apakah bisa bayar per semester?",
    a: "Bisa! Pembayaran 6 bulan atau 12 bulan sekaligus mendapat potongan harga khusus.",
  },
  {
    q: "Apakah ada kontrak minimum?",
    a: "Tidak ada. Bisa berhenti kapan saja. Untuk pembayaran bulanan, langsung stop bulan berikutnya.",
  },
  {
    q: "Bagaimana dengan kuitansi untuk SPJ?",
    a: "Kami sediakan invoice, kuitansi, dan bukti pembayaran lengkap sesuai standar keuangan institusi.",
  },
  {
    q: "Apakah bisa dipadukan dengan anggaran hibah penelitian?",
    a: "Tentu! Banyak dosen menggunakan anggaran hibah untuk langganan. Kami siap bantu dokumen yang dibutuhkan.",
  },
  {
    q: "Mengapa fee-nya 15-20%?",
    a: "Fee 15% untuk pengeluaran di bawah Rp 5 juta/bulan, 20% untuk di atas Rp 5 juta. Fee ini cover administrasi payment, invoice resmi, dan support lokal yang tidak Anda dapatkan dari provider langsung.",
  },
];
---

<BaseLayout title="AAPEDIA FLEXBILL - Bayar Rupiah, Invoice Lengkap">
  <Header />

  <main class="pt-24">
    <!-- Hero -->
    <section class="py-16 bg-gradient-to-b from-green-50 to-white">
      <div class="max-w-7xl mx-auto px-6">
        <h1 class="text-4xl md:text-5xl font-bold text-slate-800 mb-4">
          AAPEDIA <span class="text-gradient">FLEXBILL</span>
        </h1>
        <p class="text-xl text-slate-600 mb-2">
          Bayar Cloud Pakai Rupiah, Invoice Lengkap untuk SPJ
        </p>
        <p class="text-slate-500 max-w-2xl">
          Tidak perlu kartu kredit USD. Cukup transfer bank, terima invoice
          resmi untuk keperluan administrasi dan audit.
        </p>
      </div>
    </section>

    <!-- How It Works -->
    <section class="py-16 bg-slate-50">
      <div class="max-w-7xl mx-auto px-6">
        <h2
          class="text-2xl md:text-3xl font-bold text-slate-800 text-center mb-12"
        >
          Cara Kerja
        </h2>
        <div class="grid md:grid-cols-3 gap-8">
          {
            steps.map((step, index) => (
              <div class="relative text-center">
                <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-br from-primary-500 to-accent-500 flex items-center justify-center text-white font-bold text-xl">
                  {step.number}
                </div>
                <h3 class="text-lg font-bold text-slate-800 mb-2">
                  {step.title}
                </h3>
                <p class="text-slate-500 text-sm">{step.description}</p>
                {index < steps.length - 1 && (
                  <div class="hidden md:block absolute top-8 left-[60%] w-[80%] border-t-2 border-dashed border-slate-200" />
                )}
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Features -->
    <section class="py-16">
      <div class="max-w-7xl mx-auto px-6">
        <h2
          class="text-2xl md:text-3xl font-bold text-slate-800 text-center mb-4"
        >
          Keuntungan FLEXBILL
        </h2>
        <p class="text-slate-500 text-center mb-12 max-w-xl mx-auto">
          Kemudahan pembayaran cloud untuk institusi Indonesia.
        </p>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {
            features.map((feature) => (
              <div class="bg-white rounded-2xl p-6 border border-slate-100 hover-lift">
                <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-primary-50 to-accent-50 flex items-center justify-center mb-4 text-primary-600">
                  <Fragment set:html={feature.icon} />
                </div>
                <h3 class="text-lg font-bold text-slate-800 mb-2">
                  {feature.title}
                </h3>
                <p class="text-sm text-slate-500 leading-relaxed">
                  {feature.description}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Comparison: DIY vs FLEXBILL -->
    <section class="py-16 bg-slate-50">
      <div class="max-w-4xl mx-auto px-6">
        <h2
          class="text-2xl md:text-3xl font-bold text-slate-800 text-center mb-12"
        >
          Beli Langsung vs Lewat FLEXBILL
        </h2>
        <div class="grid md:grid-cols-2 gap-8">
          <!-- DIY -->
          <div class="bg-white rounded-2xl p-8 border border-slate-200">
            <div class="text-center mb-6">
              <span
                class="inline-block px-4 py-1 bg-slate-100 text-slate-600 rounded-full text-sm font-medium mb-2"
              >
                Beli Langsung
              </span>
              <h3 class="text-xl font-bold text-slate-800">DIY di AWS/GCP</h3>
            </div>
            <ul class="space-y-4 text-sm text-slate-600">
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-red-400 flex-shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                Perlu kartu kredit USD
              </li>
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-red-400 flex-shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                Kena fluktuasi kurs Dollar
              </li>
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-red-400 flex-shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                Invoice dalam bahasa Inggris
              </li>
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-red-400 flex-shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                Tidak ada kuitansi untuk SPJ
              </li>
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-red-400 flex-shrink-0 mt-0.5"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                Billing bisa melonjak tak terduga
              </li>
            </ul>
          </div>

          <!-- FLEXBILL -->
          <div
            class="bg-gradient-to-br from-primary-600 to-primary-800 rounded-2xl p-8 text-white ring-4 ring-primary-200"
          >
            <div class="text-center mb-6">
              <span
                class="inline-block px-4 py-1 bg-white/20 text-white rounded-full text-sm font-medium mb-2"
              >
                Recommended
              </span>
              <h3 class="text-xl font-bold">Lewat FLEXBILL</h3>
            </div>
            <ul class="space-y-4 text-sm text-primary-100">
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-accent-300 flex-shrink-0 mt-0.5"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                    clip-rule="evenodd"></path>
                </svg>
                Cukup transfer bank biasa
              </li>
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-accent-300 flex-shrink-0 mt-0.5"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                    clip-rule="evenodd"></path>
                </svg>
                Harga fix dalam Rupiah
              </li>
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-accent-300 flex-shrink-0 mt-0.5"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                    clip-rule="evenodd"></path>
                </svg>
                Invoice bahasa Indonesia
              </li>
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-accent-300 flex-shrink-0 mt-0.5"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                    clip-rule="evenodd"></path>
                </svg>
                Kuitansi lengkap untuk SPJ
              </li>
              <li class="flex items-start gap-3">
                <svg
                  class="w-5 h-5 text-accent-300 flex-shrink-0 mt-0.5"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
                    clip-rule="evenodd"></path>
                </svg>
                Biaya predictable tiap bulan
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ -->
    <section class="py-16">
      <div class="max-w-3xl mx-auto px-6">
        <h2
          class="text-2xl md:text-3xl font-bold text-slate-800 text-center mb-12"
        >
          Pertanyaan Umum
        </h2>
        <div class="space-y-4">
          {
            faqs.map((faq) => (
              <details class="group bg-white rounded-2xl border border-slate-200 overflow-hidden">
                <summary class="flex items-center justify-between p-6 cursor-pointer hover:bg-slate-50">
                  <span class="font-semibold text-slate-800">{faq.q}</span>
                  <svg
                    class="w-5 h-5 text-slate-400 group-open:rotate-180 transition-transform"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M19 9l-7 7-7-7"
                    />
                  </svg>
                </summary>
                <div class="px-6 pb-6 text-slate-500">{faq.a}</div>
              </details>
            ))
          }
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-16 bg-gradient-to-br from-primary-600 to-primary-800">
      <div class="max-w-4xl mx-auto px-6 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">
          Butuh Penawaran Khusus?
        </h2>
        <p class="text-primary-100 mb-8">
          Untuk kontrak tahunan atau kebutuhan institusi, hubungi kami untuk
          penawaran spesial.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="/kontak"
            class="inline-flex items-center gap-2 px-8 py-4 bg-white text-primary-700 rounded-full font-semibold hover:bg-primary-50 transition-all"
          >
            Minta Penawaran
          </a>
          <a
            href="https://wa.me/6281234567890"
            target="_blank"
            rel="noopener"
            class="inline-flex items-center gap-2 px-8 py-4 bg-transparent text-white border-2 border-white/30 rounded-full font-semibold hover:bg-white/10 transition-all"
          >
            WhatsApp Langsung
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
