                    {step.number}
                  </div>
                  <h3 class="text-lg font-bold text-slate-800 mb-2">
                    {step.title}
                  </h3>
                  <p class="text-slate-500 text-sm">{step.description}</p>
                  {index < steps.length - 1 && (
                    <div class="hidden md:block absolute top-8 left-[60%] w-[80%] border-t-2 border-dashed border-slate-300" />
